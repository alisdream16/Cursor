    "build": {
      "env": {
        "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
      }
    },
    "functions": {
      "api/ai/chat/route.ts": {
        "maxDuration": 60
      }
    }
  },
  "resolutions": {
    "@prisma/client": "6.19.0",
